@model List<BasketItemVM>
@{
    decimal total = 0;
    string role = User.FindFirst(ClaimTypes.Role)?.Value;

}

<div class="minicart-content">
    <div class="minicart-heading">
        <h5 class="mb-0" style="color:rebeccapurple;">Liked Jobs</h5>
        <hr />
        <a href="#" class="button-close">
            <i class="pe-7s-close"
               data-tippy="Close"
               data-tippy-inertia="true"
               data-tippy-animation="shift-away"
               data-tippy-delay="50"
               data-tippy-arrow="true"
               data-tippy-theme="sharpborder"></i>
        </a>
    </div>
    <ul  class="minicart-list">

         @if (role == "EMPLOYEE")
        {
            @foreach (BasketItemVM item in Model)
            {

                <li class="minicart-product">
                    <a class="product-item_remove" href="#">
                        <i class="pe-7s-close"
                        data-tippy="Remove"
                        data-tippy-inertia="true"
                        data-tippy-animation="shift-away"
                        data-tippy-delay="50"
                        data-tippy-arrow="true"
                        data-tippy-theme="sharpborder"></i>
                    </a>
                    <a asp-action="Detail" asp-controller="job" asp-route-id="@item.UserPostJobId"
                    class="product-item_img">
                  @*      <img style="width:40%"
                        src="~/assets/images/User/@item.Image"
                        alt="Product Image" />*@
                        <p style="font-size:13px;line-height:20px;"> Category:  <span style="color:red">
                                @if (item.Category.Length < 20)
                                {
                                    <span>@item.Category</span>
                                }
                                else
                                {
                                    <span> @item.Category.Substring(0,20)... </span>

                                }

                            </span></p><br>

                        <p p style="font-size:13px;margin-top:-40px">Salary: <span style="color:red">$@item.Salary</span> </p>
                    </a>
                    <div class="product-item_content">

                    </div> <hr />
                </li>
            }
        }
        else
        {
            @foreach (BasketItemVM item in Model)
            {

                <li class="minicart-product">
                    <a class="product-item_remove" href="#">
                        <i class="pe-7s-close"
                           data-tippy="Remove"
                           data-tippy-inertia="true"
                           data-tippy-animation="shift-away"
                           data-tippy-delay="50"
                           data-tippy-arrow="true"
                           data-tippy-theme="sharpborder"></i>
                    </a>
                    <a asp-action="CompanyJobDetail" asp-controller="job" asp-route-id="@item.PostJobId"
                       class="product-item_img">
                     @*   <img style="width:40%"
                             src="~/assets/images/User/@item.Image"
                             alt="Product Image" />*@
                        <p style="font-size:13px;line-height:20px;">
                            Category:  <span style="color:red">
                                @if (item.Category.Length < 20)
                                {
                                    <span>@item.Category</span>
                                }
                                else
                                {
                                    <span> @item.Category.Substring(0,20)... </span>

                                }

                            </span>
                        </p><br>

                        <p p style="font-size:13px;margin-top:-40px">Salary: <span style="color:red">$@item.Salary</span> </p>
                    </a>
                    <div class="product-item_content">
                    </div> <hr />
                </li>
            }
        }

    </ul>
</div>


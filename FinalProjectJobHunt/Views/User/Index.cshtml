@model AppUser
<section class="overlape">
    <div class="block no-padding">
        <div data-velocity="-.1" style="background: url(images/resource/mslider1.jpg) repeat scroll 50% 422.28px transparent;" class="parallax scrolly-invisible no-parallax"></div><!-- PARALLAX BACKGROUND IMAGE -->
        <div class="container fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-header">
                        <h3>Welcome @Model.Name</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="block no-padding">
        <div class="container">
            <div class="row no-gape">

                <div class="col-lg-12 column">
                    <div class="padding-left">
                        <div class="profile-title">
                            <h3>My Profile</h3>

                            <div class="upload-img-bar">
                                <span class="round upload-img-bar"><img src="~/assets/images/resource/mpf1.jpg" alt="" /><i></i></span>

                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-6">
                                <span class="pf-title">Full Name</span>
                                <p>@Model.Name</p>
                            </div>
                            <div class="col-lg-6">
                                <span class="pf-title">Surname</span>
                                <p>@Model.Surname</p>
                            </div>

                            <div class="col-lg-6">
                                <span class="pf-title">Experience</span>
                                <p>@Model year</p>
                            </div>

                            @if (Model.Age == null)
                            {
                                <p></p>
                            }
                            else
                            {
                                <div class="col-lg-6">
                                    <span class="pf-title">Age</span>
                                    <p>22</p>

                                </div>
                            }
                            @if (Model.EducationId == null)
                            {
                                <p></p>
                            }
                            else
                            {
                                   <div class="col-lg-6">
                                <span class="pf-title">Education Levels</span>
                                <p>@Model.Education.EducationName</p>

                            </div> 
                            }
                            @if (Model.CategoryId == null)
                            {
                                <p></p>
                            }
                            else
                            {
                                   <div class="col-lg-6">
                                <span class="pf-title">Categories</span>
                                <p>@Model.Category.Name</p>

                            </div>  
                            }
                            @if (Model.Description == null)
                            {
                                <p></p>
                            }
                            else
                            {
                                          <div class="col-lg-8">
                                <span class="pf-title">Description</span>

                                <p>
                                  @Model.Description  </p>

                            </div>
                            }
                  

                        </div>
                        <div class="contact-edit">
                            <h3>Contact</h3>

                            <div class="row">
                               
                                @if (Model.Phone == null)
                                {
                                    <p></p>
                                }
                                else
                                {
                                     <div class="col-lg-6">
                                    <span class="pf-title">Phone Number</span>
                                    <p> @Model.Phone <p />
                                </div> 
                                }
                                <div class="col-lg-6">
                                    <span class="pf-title">Email</span>
                                    <p>@Model.Email<p />
                                </div>
                                @if (Model.UserProfession == null)
                                {
                                    <p></p>
                                }
                                else
                                {
                                       <div class="col-lg-6">
                                    <span class="pf-title">Profession</span>
                                    <div class="pf-field">
                                        <p>@Model.UserProfession</p>

                                    </div>
                                </div> 
                                }
                            

                                <div class="col-lg-12">
                                    <a asp-action="Update" asp-controller="User" class="btn btn-warning mt-3 mr-2" style="float:right;">Edit Profile</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
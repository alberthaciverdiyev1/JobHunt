
@model List<Category>

@{
  int count = 0;
}


<div class="col-lg-12">
    <div class="card  mx-auto">
        <div class="card-body  ">
            <h4 class="card-title">Striped rows</h4>
            <p class="card-title-desc">Use <code>.table-striped</code> to add zebra-striping to any table row within the <code>&lt;tbody&gt;</code>.</p>

            <div class="table-responsive">
                <a asp-action="create" asp-area="admin" asp-controller="category" class="btn btn-success waves-effect waves-light">Create Category</a>
                <a asp-action="AddPosition" asp-area="admin" asp-controller="category" class="btn btn-warning waves-effect waves-light">Add Position</a>
                <a asp-action="index" asp-controller="home" asp-area="ProjectJobHunt" class="btn btn-primary waves-effect waves-light">Back ToHome</a>

                <table class="table table-striped table-responsive">


                    <thead>
                      
                        <tr>
                            <th>#</th>
                            <th>Icon</th>
                            <th>Name</th>
                           @* <th>Created Time</th>
                            <th>Updated Time</th>*@
                            <th>Setting</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category item in Model)
                        {
                            count++;

                            <tr>
                                <td scope="row">@count</td>
                                <td>@Html.Raw(item.Icon)</td>
                                <td>@item.Name</td>
                                <td>
                                   
                                    <a asp-action="positionIndex" asp-area="admin" asp-controller="category" asp-route-id="@item.id" class="btn btn-primary waves-effect waves-light">Positions</a>
                                    <a asp-action="update" asp-area="admin" asp-controller="category" asp-route-id="@item.id" class="btn btn-warning waves-effect waves-light">Update</a>
                                    <a asp-action="delete" asp-area="admin" asp-controller="category" asp-route-id="@item.id" class="btn btn-danger waves-effect waves-light">Delete</a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>